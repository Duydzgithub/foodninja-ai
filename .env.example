# Environment Variables for FoodNinja Backend

# Clarifai API
CLARIFAI_PAT=your_clarifai_personal_access_token_here

# CalorieNinjas API
CALORIE_API_KEY=your_calorieninjas_api_key_here

# Cohere AI API
COHERE_API_KEY=your_cohere_api_key_here

# CORS Settings (comma-separated origins)
ALLOWED_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,https://your-frontend-domain.netlify.app

# Confidence threshold for food recognition (0.0 to 1.0)
MIN_CONFIDENCE=0.4

# Port (for local development)
PORT=5000
